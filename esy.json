{
  "name": "fullstack-melange",
  "dependencies": {
    "ocaml": "4.14.0",
    "@opam/reason": "3.8.0",
    "melange": "melange-re/melange#57faf26",
    "@opam/cmdliner": "1.1.0"
  },
  "devDependencies": {
    "@opam/ocaml-lsp-server": "*"
  },
  "resolutions": {
    "@opam/reason": "reasonml/reason:reason.opam#4f6ff7616bfa699059d642a3d16d8905d83555f6"
  },
  "esy": {
    "buildsInSource": "unsafe",
    "build": [
      "ln -sfn #{melange.install} node_modules/bs-platform",
      "mel build"
    ]
  },
  "installConfig": {
    "pnp": false
  },
  "scripts": {
    "start": "dune exec --root . server/server.exe",
    "clean": "dune clean"
  }
}
