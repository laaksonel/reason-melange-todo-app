{
  "name": "fullstack-melange",
  "dependencies": {
    "ocaml": "4.14.0",

    "@opam/reason": "3.8.0",
    "melange": "melange-re/melange#b04617b360a18a37a963ce0b012a238fb84b26f8",
    "@opam/cmdliner": "1.1.0",

    "@opam/opium": "0.20.0",
    "@opam/logs": "0.7.0",
    "@opam/ppx_yojson": "*",
    "@opam/ppx_yojson_conv": "*",
    "@opam/core": "*",
    "@opam/core_unix": "*",

    "@opam/caqti": "*",
    "@opam/caqti-lwt": "*",
    "@opam/caqti-driver-postgresql": "*",
    "@opam/ppx_rapper": "*",
    "@opam/ppx_rapper_lwt": "*"
  },
  "devDependencies": {
    "@opam/ocaml-lsp-server": "*"
  },
  "resolutions": {
    "@opam/reason": "reasonml/reason:reason.opam#4f6ff7616bfa699059d642a3d16d8905d83555f6"
  },
  "esy": {
    "buildsInSource": "unsafe",
    "build": [
      "ln -sfn #{melange.install} node_modules/bs-platform",
      "mel build"
    ]
  },
  "installConfig": {
    "pnp": false
  },
  "scripts": {
    "server:start": "esy b dune exec --root . server/server.exe",
    "server:build": "esy b dune build",
    "server:dev": "watchexec -w server -e re -r -s SIGKILL esy server:start",

    "clean": "esy b dune clean"
  }
}
